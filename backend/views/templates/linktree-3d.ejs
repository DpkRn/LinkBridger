<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%=username.toUpperCase()%>'s LinkBridger profile">
    <!-- Circular favicon will be set by JavaScript -->
    <link rel="icon" type="image/png" id="dynamic-favicon" href="/images/panda.png" />
    <title><%=username.toUpperCase()%> - LinkBridger</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Montserrat', sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            color: #fff;
            perspective: 1000px;
            overflow: hidden;
        }
        
        .container {
            width: 100%;
            max-width: 520px;
            max-height: 95vh;
            transform-style: preserve-3d;
            transition: transform 0.1s ease;
            display: flex;
            flex-direction: column;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 24px;
            padding: 20px 30px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }
        
        .profile-section {
            text-align: center;
            margin-bottom: 20px;
            transform-style: preserve-3d;
            flex-shrink: 0;
        }
        
        .profile-pic-wrapper {
            position: relative;
            display: inline-block;
            margin-bottom: 25px;
            transform-style: preserve-3d;
        }
        
        .profile-pic {
            width: 110px;
            height: 110px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
            transition: transform 0.3s ease;
            transform-style: preserve-3d;
        }
        
        .profile-pic:hover {
            transform: rotateY(20deg) rotateX(10deg) scale(1.1);
        }
        
        .username {
            font-size: 28px;
            font-weight: 800;
            color: #fff;
            margin-bottom: 12px;
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            transform: translateZ(50px);
        }
        
        .bio {
            font-size: 16px;
            color: rgba(255, 255, 255, 0.9);
            line-height: 1.8;
            margin-bottom: 35px;
        }
        
        .links {
            display: flex;
            flex-direction: column;
            gap: 18px;
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
            padding-right: 5px;
            transform-style: preserve-3d;
            margin-bottom: 20px;
            scrollbar-width: thin;
            scrollbar-color: rgba(255, 255, 255, 0.3) transparent;
        }
        
        .links::-webkit-scrollbar {
            width: 6px;
        }
        
        .links::-webkit-scrollbar-track {
            background: transparent;
        }
        
        .links::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 3px;
        }
        
        .links::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 255, 0.5);
        }
        
        .links::-webkit-scrollbar {
            display: none; /* Chrome, Safari, Opera */
        }
        
        .link-item {
            opacity: 0;
            transform: translateZ(-100px) rotateX(90deg);
            animation: flipIn 0.8s ease forwards;
        }
        
        @keyframes flipIn {
            to {
                opacity: 1;
                transform: translateZ(0) rotateX(0deg);
            }
        }
        
        .btn {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
            padding: 14px 22px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            text-decoration: none;
            color: #fff;
            font-weight: 700;
            font-size: 17px;
            transition: all 0.3s ease;
            transform-style: preserve-3d;
            position: relative;
            overflow: hidden;
        }
        
        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.1);
            transform: translateZ(-10px);
            transition: transform 0.3s ease;
        }
        
        .btn:hover {
            transform: translateY(-8px) rotateX(5deg);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
            background: rgba(255, 255, 255, 0.25);
        }
        
        .btn:hover::before {
            transform: translateZ(0);
        }
        
        .btn-text {
            position: relative;
            z-index: 1;
            transform: translateZ(20px);
        }
        
        .btn-arrow {
            position: relative;
            z-index: 1;
            transition: transform 0.3s ease;
            transform: translateZ(20px);
        }
        
        .btn:hover .btn-arrow {
            transform: translateZ(20px) translateX(10px) rotateY(20deg);
        }
        
        .no-links {
            text-align: center;
            padding: 40px 20px;
            color: rgba(255, 255, 255, 0.7);
        }
        
        .footer {
            text-align: center;
            padding-top: 20px;
            margin-top: 10px;
            border-top: 2px solid rgba(255, 255, 255, 0.2);
            flex-shrink: 0;
            visibility: visible;
            opacity: 1;
        }
        
        .website {
            text-decoration: none;
            color: rgba(255, 255, 255, 0.8);
            font-size: 13px;
            transition: all 0.3s ease;
        }
        
        .website:hover {
            color: #fff;
            transform: scale(1.1);
        }
        
        .heart {
            margin: 0 5px;
            animation: heart3D 1.5s ease infinite;
            display: inline-block;
        }
        
        @keyframes heart3D {
            0%, 100% { transform: rotateY(0deg) scale(1); }
            50% { transform: rotateY(180deg) scale(1.3); }
        }
    </style>
</head>
<body>
    <div class="container" id="container">
        <div class="profile-section">
            <div class="profile-pic-wrapper">
                <img src="<%=dp.image%>" alt="<%=username.toUpperCase()%>'s Profile" class="profile-pic" onerror="handleImageError(this, '<%=username.charAt(0).toUpperCase()%>')">
            </div>
            <h1 class="username"><%= username.toUpperCase() %></h1>
            <p class="bio"><%=dp.bio||"Welcome to my link hub! Explore all my profiles below."%></p>
        </div>
        
        <div class="links">
            <% if (tree && tree.length > 0) { %>
                <% tree.forEach((item, index) => { 
                    const delay = index * 0.1;
                    %>
                    <div class="link-item" data-delay="<%= delay %>">
                        <a href="https://clickly.cv/<%= item.username %>/<%= item.source %>" class="btn" rel="noopener noreferrer" target="_self">
                            <span class="btn-text"><%= item.source.toUpperCase() %></span>
                            <span class="btn-arrow">→</span>
                        </a>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-links">
                    <p>No links available yet.</p>
                </div>
            <% } %>
        </div>
        
        <div class="footer">
            <a class="website" href="https://clickly.cv" target="_blank">
                <span>Made with</span>
                <span class="heart">❤️</span>
                <span>by LinkBridger</span>
            </a>
        </div>
    </div>

    <script>
        (function() {
            'use strict';
            
            window.handleImageError = function(img, initial) {
                if (img.onerror) img.onerror = null;
                const svg = encodeURIComponent(`<svg xmlns="http://www.w3.org/2000/svg" width="160" height="160"><circle cx="80" cy="80" r="80" fill="rgba(255,255,255,0.2)"/><text x="50%" y="50%" text-anchor="middle" dy=".3em" font-size="70" fill="white" font-weight="bold">${initial}</text></svg>`);
                img.src = 'data:image/svg+xml,' + svg;
            };
            
            // 3D mouse tracking
            const container = document.getElementById('container');
            let mouseX = 0;
            let mouseY = 0;
            
            document.addEventListener('mousemove', (e) => {
                mouseX = (e.clientX / window.innerWidth - 0.5) * 20;
                mouseY = (e.clientY / window.innerHeight - 0.5) * 20;
                
                container.style.transform = `rotateY(${mouseX}deg) rotateX(${-mouseY}deg)`;
            });

            // Create circular favicon from profile image
            function createCircularFavicon(imageUrl) {
                if (!imageUrl || imageUrl === '' || imageUrl.includes('data:')) {
                    return;
                }
                const img = new Image();
                img.crossOrigin = 'anonymous';
                img.onload = function() {
                    try {
                        const canvas = document.createElement('canvas');
                        const size = 32;
                        canvas.width = size;
                        canvas.height = size;
                        const ctx = canvas.getContext('2d');
                        ctx.beginPath();
                        ctx.arc(size / 2, size / 2, size / 2, 0, 2 * Math.PI);
                        ctx.clip();
                        const imgSize = Math.min(img.width, img.height);
                        const sx = (img.width - imgSize) / 2;
                        const sy = (img.height - imgSize) / 2;
                        ctx.drawImage(img, sx, sy, imgSize, imgSize, 0, 0, size, size);
                        const dataUrl = canvas.toDataURL('image/png');
                        const favicon = document.getElementById('dynamic-favicon');
                        if (favicon) {
                            favicon.href = dataUrl;
                        } else {
                            const link = document.createElement('link');
                            link.id = 'dynamic-favicon';
                            link.rel = 'icon';
                            link.type = 'image/png';
                            link.href = dataUrl;
                            document.head.appendChild(link);
                        }
                    } catch (e) {
                        console.log('Error creating circular favicon:', e);
                    }
                };
                img.onerror = function() {
                    if (img.crossOrigin === 'anonymous') {
                        const img2 = new Image();
                        img2.onload = img.onload;
                        img2.onerror = function() {};
                        img2.src = imageUrl;
                    }
                };
                img.src = imageUrl;
            }

            window.addEventListener('load', () => {
                const profilePic = document.querySelector('.profile-pic');
                if (profilePic && profilePic.src && profilePic.src !== window.location.href) {
                    createCircularFavicon(profilePic.src);
                }
            });
        })();
    </script>
</body>
</html>

