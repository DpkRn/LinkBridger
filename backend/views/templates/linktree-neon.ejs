<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%=username.toUpperCase()%>'s LinkBridger profile">
    <!-- Circular favicon will be set by JavaScript -->
    <link rel="icon" type="image/png" id="dynamic-favicon" href="/images/panda.png" />
    <title><%=username.toUpperCase()%> - LinkBridger</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Orbitron', sans-serif;
            background: #0a0a0a;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            color: #fff;
            position: relative;
            overflow: hidden;
        }
        
        /* Animated grid background */
        .grid-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                linear-gradient(rgba(255, 0, 150, 0.1) 1px, transparent 1px),
                linear-gradient(90deg, rgba(255, 0, 150, 0.1) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: gridMove 20s linear infinite;
            z-index: 0;
        }
        
        @keyframes gridMove {
            0% { transform: translate(0, 0); }
            100% { transform: translate(50px, 50px); }
        }
        
        .container {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 530px;
            max-height: 95vh;
            background: rgba(10, 10, 10, 0.8);
            border: 2px solid transparent;
            border-radius: 18px;
            padding: 20px 30px;
            box-shadow: 
                0 0 20px rgba(255, 0, 150, 0.5),
                0 0 40px rgba(0, 255, 255, 0.3),
                inset 0 0 20px rgba(255, 0, 150, 0.1);
            animation: borderGlow 3s ease infinite;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        
        @keyframes borderGlow {
            0%, 100% {
                border-color: #ff0096;
                box-shadow: 
                    0 0 20px rgba(255, 0, 150, 0.5),
                    0 0 40px rgba(0, 255, 255, 0.3),
                    inset 0 0 20px rgba(255, 0, 150, 0.1);
            }
            50% {
                border-color: #00ffff;
                box-shadow: 
                    0 0 30px rgba(0, 255, 255, 0.6),
                    0 0 50px rgba(255, 0, 150, 0.4),
                    inset 0 0 30px rgba(0, 255, 255, 0.15);
            }
        }
        
        .profile-section {
            text-align: center;
            margin-bottom: 20px;
            flex-shrink: 0;
        }
        
        .profile-pic-wrapper {
            position: relative;
            display: inline-block;
            margin-bottom: 25px;
        }
        
        .profile-pic {
            width: 110px;
            height: 110px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #ff0096;
            box-shadow: 
                0 0 20px rgba(255, 0, 150, 0.8),
                0 0 40px rgba(0, 255, 255, 0.5),
                inset 0 0 20px rgba(255, 0, 150, 0.2);
            transition: all 0.4s ease;
            position: relative;
            z-index: 2;
            animation: picPulse 2s ease infinite;
        }
        
        @keyframes picPulse {
            0%, 100% {
                box-shadow: 
                    0 0 20px rgba(255, 0, 150, 0.8),
                    0 0 40px rgba(0, 255, 255, 0.5),
                    inset 0 0 20px rgba(255, 0, 150, 0.2);
            }
            50% {
                box-shadow: 
                    0 0 30px rgba(255, 0, 150, 1),
                    0 0 60px rgba(0, 255, 255, 0.7),
                    inset 0 0 30px rgba(255, 0, 150, 0.3);
            }
        }
        
        .profile-pic:hover {
            transform: scale(1.15) rotate(360deg);
        }
        
        .username {
            font-size: 28px;
            font-weight: 900;
            background: linear-gradient(90deg, #ff0096, #00ffff, #ff0096);
            background-size: 200% auto;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 12px;
            text-shadow: 0 0 30px rgba(255, 0, 150, 0.5);
            animation: gradientText 3s linear infinite, textShake 0.1s ease infinite;
            letter-spacing: 2px;
        }
        
        @keyframes gradientText {
            to { background-position: 200% center; }
        }
        
        @keyframes textShake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-1px); }
            75% { transform: translateX(1px); }
        }
        
        .bio {
            font-size: 15px;
            color: #00ffff;
            line-height: 1.8;
            margin-bottom: 35px;
            text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
        }
        
        .links {
            display: flex;
            flex-direction: column;
            gap: 15px;
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
            padding-right: 5px;
            margin-bottom: 20px;
            scrollbar-width: thin;
            scrollbar-color: rgba(255, 0, 150, 0.3) transparent;
        }
        
        .links::-webkit-scrollbar {
            width: 6px;
        }
        
        .links::-webkit-scrollbar-track {
            background: transparent;
        }
        
        .links::-webkit-scrollbar-thumb {
            background: rgba(255, 0, 150, 0.3);
            border-radius: 3px;
        }
        
        .links::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 0, 150, 0.5);
        }
        
        .link-item {
            opacity: 0;
            transform: scale(0.8);
            animation: neonPop 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
        }
        
        @keyframes neonPop {
            to {
                opacity: 1;
                transform: scale(1);
            }
        }
        
        .btn {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
            padding: 14px 22px;
            background: rgba(255, 0, 150, 0.1);
            border: 2px solid #ff0096;
            border-radius: 12px;
            text-decoration: none;
            color: #ff0096;
            font-weight: 700;
            font-size: 16px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: 2px;
            box-shadow: 
                0 0 10px rgba(255, 0, 150, 0.3),
                inset 0 0 10px rgba(255, 0, 150, 0.1);
        }
        
        .btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 0, 150, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }
        
        .btn:hover::before {
            width: 400px;
            height: 400px;
        }
        
        .btn:hover {
            border-color: #00ffff;
            color: #00ffff;
            box-shadow: 
                0 0 20px rgba(0, 255, 255, 0.6),
                0 0 40px rgba(255, 0, 150, 0.4),
                inset 0 0 20px rgba(0, 255, 255, 0.2);
            transform: translateY(-3px);
        }
        
        .btn-text {
            position: relative;
            z-index: 1;
        }
        
        .btn-arrow {
            position: relative;
            z-index: 1;
            transition: transform 0.3s ease;
        }
        
        .btn:hover .btn-arrow {
            transform: translateX(10px) scale(1.2);
        }
        
        .no-links {
            text-align: center;
            padding: 40px 20px;
            color: #00ffff;
        }
        
        .footer {
            text-align: center;
            padding-top: 20px;
            margin-top: 10px;
            border-top: 2px solid rgba(255, 0, 150, 0.3);
            flex-shrink: 0;
            visibility: visible;
            opacity: 1;
        }
        
        .website {
            text-decoration: none;
            color: #00ffff;
            font-size: 12px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .website:hover {
            color: #ff0096;
            text-shadow: 0 0 10px rgba(255, 0, 150, 0.8);
        }
        
        .heart {
            margin: 0 5px;
            animation: neonHeart 1s ease infinite;
        }
        
        @keyframes neonHeart {
            0%, 100% { 
                filter: drop-shadow(0 0 5px #ff0096);
                transform: scale(1);
            }
            50% { 
                filter: drop-shadow(0 0 15px #00ffff);
                transform: scale(1.3);
            }
        }
        
        @media (max-width: 480px) {
            body {
                padding: 10px;
            }
            
            .container {
                padding: 20px 15px;
                max-height: 98vh;
            }
            
            .profile-section {
                margin-bottom: 15px;
            }
            
            .links {
                gap: 10px;
                margin-bottom: 15px;
            }
        }
        
        @media (max-height: 600px) {
            .container {
                max-height: 98vh;
            }
            
            .profile-section {
                margin-bottom: 15px;
            }
            
            .profile-pic {
                width: 80px;
                height: 80px;
            }
            
            .username {
                font-size: 22px;
            }
            
            .bio {
                font-size: 14px;
                margin-bottom: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="grid-bg"></div>
    
    <div class="container">
        <div class="profile-section">
            <div class="profile-pic-wrapper">
                <img src="<%=dp.image%>" alt="<%=username.toUpperCase()%>'s Profile" class="profile-pic" onerror="handleImageError(this, '<%=username.charAt(0).toUpperCase()%>')">
            </div>
            <h1 class="username"><%= username.toUpperCase() %></h1>
            <p class="bio"><%=dp.bio||"Welcome to my link hub! Explore all my profiles below."%></p>
        </div>
        
        <div class="links">
            <% if (tree && tree.length > 0) { %>
                <% tree.forEach((item, index) => { 
                    const delay = index * 0.1;
                    %>
                    <div class="link-item" data-delay="<%= delay %>">
                        <a href="https://clickly.cv/<%= item.username %>/<%= item.source %>" class="btn" rel="noopener noreferrer" target="_self">
                            <span class="btn-text"><%= item.source.toUpperCase() %></span>
                            <span class="btn-arrow">→</span>
                        </a>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-links">
                    <p>No links available yet.</p>
                </div>
            <% } %>
        </div>
        
        <div class="footer">
            <a class="website" href="https://clickly.cv" target="_blank">
                <span>Made with</span>
                <span class="heart">❤️</span>
                <span>by LinkBridger</span>
            </a>
        </div>
    </div>

    <script>
        (function() {
            'use strict';
            window.handleImageError = function(img, initial) {
                if (img.onerror) img.onerror = null;
                const svg = encodeURIComponent(`<svg xmlns="http://www.w3.org/2000/svg" width="160" height="160"><circle cx="80" cy="80" r="80" fill="#0a0a0a"/><circle cx="80" cy="80" r="76" fill="none" stroke="#ff0096" stroke-width="4"/><text x="50%" y="50%" text-anchor="middle" dy=".3em" font-size="60" fill="#ff0096" font-weight="bold">${initial}</text></svg>`);
                img.src = 'data:image/svg+xml,' + svg;
            };

            // Create circular favicon from profile image
            function createCircularFavicon(imageUrl) {
                if (!imageUrl || imageUrl === '' || imageUrl.includes('data:')) {
                    return;
                }
                const img = new Image();
                img.crossOrigin = 'anonymous';
                img.onload = function() {
                    try {
                        const canvas = document.createElement('canvas');
                        const size = 32;
                        canvas.width = size;
                        canvas.height = size;
                        const ctx = canvas.getContext('2d');
                        ctx.beginPath();
                        ctx.arc(size / 2, size / 2, size / 2, 0, 2 * Math.PI);
                        ctx.clip();
                        const imgSize = Math.min(img.width, img.height);
                        const sx = (img.width - imgSize) / 2;
                        const sy = (img.height - imgSize) / 2;
                        ctx.drawImage(img, sx, sy, imgSize, imgSize, 0, 0, size, size);
                        const dataUrl = canvas.toDataURL('image/png');
                        const favicon = document.getElementById('dynamic-favicon');
                        if (favicon) {
                            favicon.href = dataUrl;
                        } else {
                            const link = document.createElement('link');
                            link.id = 'dynamic-favicon';
                            link.rel = 'icon';
                            link.type = 'image/png';
                            link.href = dataUrl;
                            document.head.appendChild(link);
                        }
                    } catch (e) {
                        console.log('Error creating circular favicon:', e);
                    }
                };
                img.onerror = function() {
                    if (img.crossOrigin === 'anonymous') {
                        const img2 = new Image();
                        img2.onload = img.onload;
                        img2.onerror = function() {};
                        img2.src = imageUrl;
                    }
                };
                img.src = imageUrl;
            }

            window.addEventListener('load', () => {
                const profilePic = document.querySelector('.profile-pic');
                if (profilePic && profilePic.src && profilePic.src !== window.location.href) {
                    createCircularFavicon(profilePic.src);
                }
            });
        })();
    </script>
</body>
</html>

