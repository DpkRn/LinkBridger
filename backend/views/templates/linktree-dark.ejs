<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%=username.toUpperCase()%>'s LinkBridger profile">
    <!-- Circular favicon will be set by JavaScript -->
    <link rel="icon" type="image/png" id="dynamic-favicon" href="/images/panda.png" />
    <title><%=username.toUpperCase()%> - LinkBridger</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Inter', sans-serif;
            background: #0a0a0a;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            color: #fff;
            overflow: hidden;
            position: relative;
        }
        
        /* Animated background particles */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            pointer-events: none;
        }
        
        .particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: rgba(255, 255, 255, 0.5);
            border-radius: 50%;
            animation: float 20s infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0) translateX(0); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-100vh) translateX(100px); opacity: 0; }
        }
        
        .container {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 500px;
            max-height: 95vh;
            background: rgba(20, 20, 20, 0.8);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 20px 30px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5),
                        0 0 0 1px rgba(255, 255, 255, 0.05) inset;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        
        .profile-section {
            text-align: center;
            margin-bottom: 20px;
            flex-shrink: 0;
        }
        
        .profile-pic-wrapper {
            position: relative;
            display: inline-block;
            margin-bottom: 25px;
        }
        
        .profile-pic {
            width: 110px;
            height: 110px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #333;
            box-shadow: 0 0 30px rgba(255, 255, 255, 0.1),
                        0 0 60px rgba(100, 100, 255, 0.2);
            transition: all 0.4s ease;
            position: relative;
            z-index: 2;
        }
        
        .profile-pic:hover {
            transform: scale(1.1) rotate(5deg);
            box-shadow: 0 0 40px rgba(100, 100, 255, 0.4),
                        0 0 80px rgba(100, 100, 255, 0.3);
        }
        
        .profile-pic-glow {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 130px;
            height: 130px;
            border-radius: 50%;
            background: radial-gradient(circle, rgba(100, 100, 255, 0.3), transparent);
            animation: pulse 2s ease-in-out infinite;
            z-index: 1;
        }
        
        @keyframes pulse {
            0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.5; }
            50% { transform: translate(-50%, -50%) scale(1.2); opacity: 0.8; }
        }
        
        .username {
            font-size: 26px;
            font-weight: 700;
            color: #fff;
            margin-bottom: 12px;
            letter-spacing: 1px;
            text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
            animation: fadeInDown 0.8s ease;
        }
        
        @keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .bio {
            font-size: 16px;
            color: #aaa;
            line-height: 1.6;
            margin-bottom: 35px;
            animation: fadeIn 1s ease 0.2s both;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .links {
            display: flex;
            flex-direction: column;
            gap: 15px;
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
            padding-right: 5px;
            margin-bottom: 20px;
            scrollbar-width: thin;
            scrollbar-color: rgba(100, 100, 255, 0.3) transparent;
        }
        
        .links::-webkit-scrollbar {
            width: 6px;
        }
        
        .links::-webkit-scrollbar-track {
            background: transparent;
        }
        
        .links::-webkit-scrollbar-thumb {
            background: rgba(100, 100, 255, 0.3);
            border-radius: 3px;
        }
        
        .links::-webkit-scrollbar-thumb:hover {
            background: rgba(100, 100, 255, 0.5);
        }
        
        .link-item {
            opacity: 0;
            transform: translateX(-30px);
            animation: slideInLeft 0.6s ease forwards;
        }
        
        @keyframes slideInLeft {
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        .btn {
            display: block;
            width: 100%;
            padding: 14px 22px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            text-decoration: none;
            color: #fff;
            font-weight: 500;
            font-size: 16px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s;
        }
        
        .btn:hover::before {
            left: 100%;
        }
        
        .btn:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(100, 100, 255, 0.5);
            transform: translateX(10px);
            box-shadow: 0 10px 30px rgba(100, 100, 255, 0.2);
        }
        
        .btn-text {
            position: relative;
            z-index: 1;
        }
        
        .no-links {
            text-align: center;
            padding: 40px 20px;
            color: #666;
        }
        
        .footer {
            text-align: center;
            padding-top: 20px;
            margin-top: 10px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            flex-shrink: 0;
            visibility: visible;
            opacity: 1;
        }
        
        .website {
            text-decoration: none;
            color: #666;
            font-size: 13px;
            transition: color 0.3s ease;
        }
        
        .website:hover {
            color: #fff;
        }
        
        .heart {
            margin: 0 5px;
            animation: heartbeat 1.5s ease infinite;
        }
        
        @keyframes heartbeat {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.2); }
        }
        
        @media (max-width: 480px) {
            body {
                padding: 10px;
            }
            
            .container {
                padding: 20px 15px;
                max-height: 98vh;
            }
            
            .profile-section {
                margin-bottom: 15px;
            }
            
            .links {
                gap: 10px;
                margin-bottom: 15px;
            }
        }
        
        @media (max-height: 600px) {
            .container {
                max-height: 98vh;
            }
            
            .profile-section {
                margin-bottom: 15px;
            }
            
            .profile-pic {
                width: 80px;
                height: 80px;
            }
            
            .username {
                font-size: 22px;
            }
            
            .bio {
                font-size: 14px;
                margin-bottom: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="particles" id="particles"></div>
    
    <div class="container">
        <div class="profile-section">
            <div class="profile-pic-wrapper">
                <div class="profile-pic-glow"></div>
                <img src="<%=dp.image%>" alt="<%=username.toUpperCase()%>'s Profile" class="profile-pic" onerror="handleImageError(this, '<%=username.charAt(0).toUpperCase()%>')">
            </div>
            <h1 class="username"><%= username.toUpperCase() %></h1>
            <p class="bio"><%=dp.bio||"Welcome to my link hub! Explore all my profiles below."%></p>
        </div>
        
        <div class="links">
            <% if (tree && tree.length > 0) { %>
                <% tree.forEach((item, index) => {
                    const delay = index * 0.1;
                    %>
                    <div class="link-item" data-delay="<%= delay %>">
                        <a href="https://clickly.cv/<%= item.username %>/<%= item.source %>" class="btn" rel="noopener noreferrer" target="_self">
                            <span class="btn-text"><%= item.source.toUpperCase() %></span>
                        </a>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-links">
                    <p>No links available yet.</p>
                </div>
            <% } %>
        </div>
        
        <div class="footer">
            <a class="website" href="https://clickly.cv" target="_blank">
                <span>Made with</span>
                <span class="heart">❤️</span>
                <span>by LinkBridger</span>
            </a>
        </div>
    </div>

    <script>
        (function() {
            'use strict';
            
            window.handleImageError = function(img, initial) {
                if (img.onerror) img.onerror = null;
                const svg = encodeURIComponent(`<svg xmlns="http://www.w3.org/2000/svg" width="140" height="140"><circle cx="70" cy="70" r="70" fill="#1a1a1a"/><text x="50%" y="50%" text-anchor="middle" dy=".3em" font-size="50" fill="#fff" font-weight="bold">${initial}</text></svg>`);
                img.src = 'data:image/svg+xml,' + svg;
            };
            
            // Create floating particles
            const particlesContainer = document.getElementById('particles');
            for (let i = 0; i < 50; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (15 + Math.random() * 10) + 's';
                particlesContainer.appendChild(particle);
            }

            // Create circular favicon from profile image
            function createCircularFavicon(imageUrl) {
                if (!imageUrl || imageUrl === '' || imageUrl.includes('data:')) {
                    return;
                }
                const img = new Image();
                img.crossOrigin = 'anonymous';
                img.onload = function() {
                    try {
                        const canvas = document.createElement('canvas');
                        const size = 32;
                        canvas.width = size;
                        canvas.height = size;
                        const ctx = canvas.getContext('2d');
                        ctx.beginPath();
                        ctx.arc(size / 2, size / 2, size / 2, 0, 2 * Math.PI);
                        ctx.clip();
                        const imgSize = Math.min(img.width, img.height);
                        const sx = (img.width - imgSize) / 2;
                        const sy = (img.height - imgSize) / 2;
                        ctx.drawImage(img, sx, sy, imgSize, imgSize, 0, 0, size, size);
                        const dataUrl = canvas.toDataURL('image/png');
                        const favicon = document.getElementById('dynamic-favicon');
                        if (favicon) {
                            favicon.href = dataUrl;
                        } else {
                            const link = document.createElement('link');
                            link.id = 'dynamic-favicon';
                            link.rel = 'icon';
                            link.type = 'image/png';
                            link.href = dataUrl;
                            document.head.appendChild(link);
                        }
                    } catch (e) {
                        console.log('Error creating circular favicon:', e);
                    }
                };
                img.onerror = function() {
                    if (img.crossOrigin === 'anonymous') {
                        const img2 = new Image();
                        img2.onload = img.onload;
                        img2.onerror = function() {};
                        img2.src = imageUrl;
                    }
                };
                img.src = imageUrl;
            }

            window.addEventListener('load', () => {
                const profilePic = document.querySelector('.profile-pic');
                if (profilePic && profilePic.src && profilePic.src !== window.location.href) {
                    createCircularFavicon(profilePic.src);
                }
            });
        })();
    </script>
</body>
</html>

