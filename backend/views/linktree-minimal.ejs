<!-- views/linktree-minimal.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%=username.toUpperCase()%>'s LinkBridger profile - Connect with all my social media profiles">
    <link rel="icon" type="image/svg+xml" href="<%=dp.image%>" />
    <title><%=username.toUpperCase()%> - LinkBridger</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            color: #333;
            overflow: hidden;
        }
        
        .container {
            width: 100%;
            max-width: 600px;
            max-height: 95vh;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }
        
        .profile-section {
            text-align: center;
            margin-bottom: 20px;
            flex-shrink: 0;
        }
        
        .profile-pic {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            display: block;
            margin: 0 auto 20px auto;
            border: 4px solid #667eea;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }
        
        .username {
            font-size: 28px;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 10px;
            letter-spacing: -0.5px;
        }
        
        .bio {
            font-size: 15px;
            color: #666;
            line-height: 1.6;
            margin-bottom: 30px;
        }
        
        .links {
            display: flex;
            flex-direction: column;
            gap: 12px;
            flex: 1;
            overflow-y: auto;
            overflow-x: hidden;
            padding-right: 5px;
            margin-bottom: 20px;
            scrollbar-width: thin;
            scrollbar-color: rgba(102, 126, 234, 0.3) transparent;
        }
        
        .links::-webkit-scrollbar {
            width: 6px;
        }
        
        .links::-webkit-scrollbar-track {
            background: transparent;
        }
        
        .links::-webkit-scrollbar-thumb {
            background: rgba(102, 126, 234, 0.3);
            border-radius: 3px;
        }
        
        .links::-webkit-scrollbar-thumb:hover {
            background: rgba(102, 126, 234, 0.5);
        }
        
        .link-item {
            width: 100%;
        }
        
        .btn {
            display: block;
            width: 100%;
            padding: 18px 28px;
            background: #fff;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            text-decoration: none;
            color: #333;
            font-weight: 500;
            font-size: 16px;
            transition: all 0.3s ease;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .btn:hover {
            border-color: #667eea;
            color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.2);
        }
        
        .btn-text {
            display: block;
        }
        
        .no-links {
            text-align: center;
            padding: 40px 20px;
            color: #999;
        }
        
        .footer {
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid #e0e0e0;
            flex-shrink: 0;
        }
        
        .website {
            text-decoration: none;
            color: #999;
            font-size: 13px;
            transition: color 0.3s ease;
        }
        
        .website:hover {
            color: #667eea;
        }
        
        .heart {
            margin: 0 5px;
        }
        
        @media (max-width: 480px) {
            body {
                padding: 10px;
            }
            
            .container {
                padding: 20px 15px;
                max-height: 98vh;
            }
            
            .username {
                font-size: 24px;
            }
            
            .profile-pic {
                width: 100px;
                height: 100px;
            }
            
            .profile-section {
                margin-bottom: 15px;
            }
            
            .links {
                gap: 10px;
                margin-bottom: 15px;
            }
            
            .footer {
                padding-top: 15px;
            }
        }
        
        @media (max-height: 600px) {
            .container {
                max-height: 98vh;
            }
            
            .profile-section {
                margin-bottom: 15px;
            }
            
            .profile-pic {
                width: 80px;
                height: 80px;
            }
            
            .username {
                font-size: 22px;
            }
            
            .bio {
                font-size: 14px;
                margin-bottom: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="profile-section">
            <img src="<%=dp.image%>" alt="<%=username.toUpperCase()%>'s Profile Picture" class="profile-pic" onerror="handleImageError(this, '<%=username.charAt(0).toUpperCase()%>')">
            <h1 class="username"><%= username.toUpperCase() %></h1>
            <p class="bio"><%=dp.bio||"Welcome to my link hub! Explore all my profiles below."%></p>
        </div>
        
        <div class="links">
            <% if (tree && tree.length > 0) { %>
                <% tree.forEach((item, index) => { %>
                    <div class="link-item">
                        <a href="<%= getUserLinkUrl(item.username, item.source) %>" class="btn" rel="noopener noreferrer" target="_self">
                            <span class="btn-text"><%= item.source.toUpperCase() %></span>
                        </a>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-links">
                    <p>No links available yet.</p>
                </div>
            <% } %>
        </div>
        
        <div class="footer">
            <a class="website" href="https://clickly.cv" target="_blank">
                <span>Made with</span>
                <span class="heart">❤️</span>
                <span>by LinkBridger</span>
            </a>
        </div>
    </div>

    <script>
        (function() {
            'use strict';
            
            // Handle image error with fallback
            window.handleImageError = function(img, initial) {
                if (img.onerror) {
                    img.onerror = null;
                }
                const svg = encodeURIComponent('<svg xmlns="http://www.w3.org/2000/svg" width="120" height="120"><circle cx="60" cy="60" r="60" fill="#667eea"/><text x="50%" y="50%" text-anchor="middle" dy=".3em" font-size="40" fill="white" font-weight="bold">' + initial + '</text></svg>');
                img.src = 'data:image/svg+xml,' + svg;
            };
            
            // Simple fade-in animation
            window.addEventListener('load', () => {
                const container = document.querySelector('.container');
                if (container) {
                    container.style.opacity = '0';
                    container.style.transition = 'opacity 0.5s ease-in';
                    setTimeout(() => {
                        container.style.opacity = '1';
                    }, 100);
                }
                
                // Stagger link animations
                const linkItems = document.querySelectorAll('.link-item');
                linkItems.forEach((item, index) => {
                    item.style.opacity = '0';
                    item.style.transform = 'translateY(10px)';
                    setTimeout(() => {
                        item.style.transition = 'opacity 0.4s ease-out, transform 0.4s ease-out';
                        item.style.opacity = '1';
                        item.style.transform = 'translateY(0)';
                    }, 200 + (index * 50));
                });
            });
        })();
    </script>
</body>
</html>

